{
  "name": "on-office",
  "productName": "OnOffice",
  "description": "Instant Office, just add browser.",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Ruben van der Leun",
  "main": "dist/main.js",
  "scripts": {
    "build-mac": "npm run dist && npm run package-mac",
    "dist": "sh build.sh",
    "package-mac": "electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --prune=true --out=release-builds --icon=assets/mac.icns  --electron-version=1.6.2",
    "package-windows": "electron-packager . --ignore=virtual-office --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds --icon=assets/windows.ico  --electron-version=1.6.2",
    "package-linux": "electron-packager . --ignore=virtual-office --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=release-builds",
    "start": "npm run build-mac && node server/index.js"
  },
  "dependencies": {
    "electron-json-storage": "^4.1.1",
    "express": "^4.16.4",
    "internal-ip": "^4.3.0",
    "jsdom": "^12.2.0",
    "node-minify": "^3.5.1",
    "rimraf": "^2.6.2",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1"
  },
  "devDependencies": {
    "electron": "^2.0.9",
    "electron-packager": "^12.1.2"
  }
}
